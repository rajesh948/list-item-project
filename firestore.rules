rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection rules
    match /users/{userId} {
      // Allow read if authenticated and either admin or own user
      allow read: if isAuthenticated() && (isAdmin() || isOwner(userId));

      // Allow create if admin OR if user is creating their own document (for initial signup)
      allow create: if isAuthenticated() && (isAdmin() || isOwner(userId));

      // Allow update for admins or own user
      allow update: if isAdmin() || isOwner(userId);

      // Allow delete only for admins
      allow delete: if isAdmin();
    }

    // Categories collection rules
    match /categories/{categoryId} {
      // Allow read for all authenticated users
      allow read: if isAuthenticated();

      // Allow write only for admins
      allow write: if isAdmin();
    }

    // Saved Reports collection rules
    match /savedReports/{reportId} {
      // Allow read if authenticated and either admin or own report
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if owner or admin
      allow update: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow delete if owner or admin
      allow delete: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }

    // Active Sessions collection rules
    match /activeSessions/{sessionId} {
      // Allow read if authenticated and either admin or own session
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if owner (for updating lastActive timestamp)
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Allow delete if owner or admin
      allow delete: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }

    // App Settings collection rules
    match /appSettings/{docId} {
      // Allow read for all authenticated users
      allow read: if isAuthenticated();

      // Allow write only for admins
      allow write: if isAdmin();
    }

    // Premium Requests collection rules
    match /premiumRequests/{requestId} {
      // Allow read if admin or own request
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update only for admins (to approve/reject)
      allow update: if isAdmin();

      // Allow delete only for admins
      allow delete: if isAdmin();
    }

    // Customers collection rules (Premium feature)
    match /customers/{customerId} {
      // Allow read if authenticated and either admin or own customer
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if owner or admin
      allow update: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow delete if owner or admin
      allow delete: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }

    // Support Tickets collection rules
    match /tickets/{ticketId} {
      // Allow read if admin or own ticket
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if admin (to change status, reply) or owner (to add messages)
      allow update: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow delete only for admins
      allow delete: if isAdmin();
    }

    // Shared Reports collection rules (PUBLIC - for WhatsApp sharing)
    match /sharedReports/{shareId} {
      // Allow read for ANYONE (no authentication required)
      allow read: if true;

      // Allow create only for authenticated users
      allow create: if isAuthenticated();

      // No update or delete allowed
      allow update, delete: if false;
    }

    // App Config collection rules (PUBLIC - for app update check)
    match /appConfig/{docId} {
      // Allow read for ANYONE (no authentication required - needed for update check)
      allow read: if true;

      // Allow write only for admins
      allow write: if isAdmin();
    }

    // Report Templates collection rules (Premium feature)
    match /templates/{templateId} {
      // Allow read if authenticated and either admin or own template
      allow read: if isAuthenticated() &&
                     (isAdmin() || resource.data.userId == request.auth.uid);

      // Allow create if authenticated and userId matches auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if owner
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Allow delete if owner or admin
      allow delete: if isAuthenticated() &&
                       (isAdmin() || resource.data.userId == request.auth.uid);
    }
  }
}
